<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClinicalTest2.Pages.StartPage"
             xmlns:pages="clr-namespace:ClinicalTest2.Pages"
             BackgroundImageSource="bluebackground.png"
             Title="">
    <Grid>
        <Label Text="FIND CLINICAL TRIALS FOR YOUR CONDITION" 
               HorizontalOptions="Center"
               VerticalOptions="CenterAndExpand"
               FontSize="30"
               FontAttributes="Bold"
               TextColor="White"
               Margin="110,-250,50,250">
        </Label>
        <ImageButton Source="dotnet_bot.png" 
                     HorizontalOptions="CenterAndExpand"
                     VerticalOptions="EndAndExpand"
                     HeightRequest="80"
                     WidthRequest="80"
                     IsEnabled="True"
                     Clicked="ImageButton_OnClicked"  
                     Aspect="AspectFill">

        </ImageButton>
    </Grid>
</ContentPage> 
